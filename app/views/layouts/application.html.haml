!!! 5
%html{lang: 'en'}
%head
  %meta{charset: 'utf-8'}
  %title Debutante
  = stylesheet_link_tag "application", media: "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
  .navbar
    .navbar-inner
      .container
        = link_to "Debutante", root_url, class: 'brand'
        - if user_signed_in?
          = link_to "Sign Out", signout_path, class: "btn btn-inverse pull-right"
          %p.navbar-text.pull-right
            Logged in as 
            = current_user.github_name
  .container
    .row
      .span12
        - flash.each do |name, msg|
          %div{class: alert_class(name)}
            %button.close{data: {dismiss: "alert"}}Ã—
            = msg
    = yield
